<div class="input-clear-box hidden" data-view-element="clearBoxEl">
    <span class="textinput input-clear-label" data-view-element="clearLabelEl"></span>
    <a class="button input-clear-button" data-view-element="clearButtonEl">
        <span class="button-icon"></span>
        <span class="button-label">Clear</span>
    </a>
</div>
<div class="input-file-box" data-view-element="fileBoxEl">
    <input type="file" class="input-file-input" data-view-element="fileInputEl" style="position: absolute; left: -1000000px; top: -1000000px;" tabindex="-1" />
    <a class="button input-file-button" data-view-element="fileButtonEl">
        <span class="button-icon"></span>
        <span class="button-label">Import file</span>
    </a>
</div>
<div class="input-paste-box" data-view-element="pasteBoxEl">
    <textarea rows="10" cols="80" class="textinput input-paste-input" data-view-element="pasteInputEl"></textarea>
    <a class="button input-paste-button" data-view-element="pasteButtonEl">
        <span class="button-icon"></span>
        <span class="button-label">Paste</span>
    </a>
</div>
<div class="input-url-box" data-view-element="urlBoxEl">
    <input type="text" class="textinput input-url-input" data-view-element="urlInputEl" />
    <a class="button input-url-button" data-view-element="urlButtonEl">
        <span class="button-icon"></span>
        <span class="button-label">Import from URL</span>
    </a>
</div>
